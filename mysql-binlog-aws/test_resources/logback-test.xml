<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date |-%level %logger [%thread] %message%n%xException</pattern>
        </encoder>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNCSTDOUT" />
    </root>

    <!-- moda software uses 'application' as the logger name -->
    <logger name="application" level="INFO"/>

    <!-- turn a few off that make the logs too verbose-->
    <logger name="com.amazonaws" level="ERROR" />
    <logger name="software.amazon" level="ERROR" />
    <logger name="ch.qos.logback" level="ERROR" />
    <logger name="io.netty" level="WARN" />
    <logger name="org.testcontainers" level="WARN" />
    <logger name="org.apache.http" level="ERROR" />
    <logger name="o.a.h.i.c." level="ERROR" />

    <!-- database logging (hikari provides connection pooling) -->
    <logger name="com.mysql" level="ERROR"/>
    <logger name="org.jdbcdslog" level="ERROR"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="ERROR"/>

</configuration>
